
@{
    ViewData["Title"] = "AP - Automation Place";
}

@model SimpleForm;

<h3>Upload File Form</h3>

<form asp-action="AlternativeFormResult" method="post">

    <div class="panel panel-default">
        <div class="panel-body">
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label" for="name">Name</label>
                    <input type="text" class="form-control" id="name" placeholder="Name"
                           asp-for="@Model.Name">
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <form action="upload.php" method="post" enctype="multipart/form-data">
                        <label class="control-label" for="image">Select yout photo profile to upload:</label><br />
                        <input type="file" name="fileToUpload" id="imgInp">
                    </form>
                </div>





                <div class="form-group">

                    <button type="reset" class="btn btn-success">
                        Clear
                    </button>

                    <button type="submit"
                            class="btn btn-success" asp-action="AlternativeFormResult">
                        Submit
                    </button>
                </div>
            </div>

            <div class="col-md-6">



                <img id="blah" src="#" alt="your image" />
            </div>

        </div>
    </div>


</form>

@section Scripts
    {
    <script src="~/js/upload-form.js">

    </script>
}
